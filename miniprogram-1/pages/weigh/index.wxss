.status {
  margin: 16rpx 0;
  font-weight: 600;
}
.status.idle { color: #95a5a6; }
.status.connecting { color: #f39c12; }
.status.connected { color: #27ae60; }

.input,
.picker {
  border: 1rpx solid #dce5f2;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-top: 16rpx;
}

.radio-item {
  margin-right: 24rpx;
  font-size: 26rpx;
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn-row {
  margin: 16rpx 0;
  display: flex;
  gap: 14rpx;
}

.more-link {
  color: #2f80ed;
}
